<%- include("partials/header") -%>

<h1>Home</h1>

<p><%=homeContent%></p>

<% posts.forEach(post => { %>
    <h1><%= post.title %></h1>
    <p>
    <%= post.body.substring(0, 100) + " ..." %>
    <a href="/posts/<%=post.title %>">Read More</a>
    </p>
<% }) %>

<form action="/compose">
  <button class="new-post" type="submit">+</button>
</form>

<%- include("partials/footer") -%>
